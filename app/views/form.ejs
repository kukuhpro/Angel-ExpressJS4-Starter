<% layout('layout') -%>
<div class="__banner">
	<div class="banner__inner">
	 	<form action="<%= URL.route('site.form.store') %>" method="POST">
	 		<div class="form-group">
	 			<label>Username</label>
	 			<input type="text" name="username" class="form-control"> <br/>
	 			<%= req.query.error_username ? req.query.error_username : '' %>
	 		</div>
	 		<div class="form-group">
	 			<label>Email</label>
	 			<input type="email" name="email" class="form-control"> <br/>
	 			<%= req.query.error_email ? req.query.error_email : '' %>
	 		</div>
	 		<div class="form-group">
	 			<label></label>
	 			<button type="submit" class="btn btn-primary">
	 				Submit
	 			</button>
	 		</div>
	 	</form>
	</div>
</div>
